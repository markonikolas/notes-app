<%= render 'header', header_title: 'Edit Note' %>
<main class="p-6">
	<article>
		<%= form_for @note, :html => { :class => "flex flex-col gap-y-12", :autocomplete => "off" } do |field| %>
			
			<section>
				<label for="title" class="text-xs text-gray-400 mb-2 block">Edit Title</label>
				<%= field.text_field :title, :id => 'title', :class => "p-2 border-b-2 focus:border-gray-500 focus:outline-none
				border-opacity-50 border-solid border-gray-300 font-sans text-5xl font-semibold max-w-full w-full" %>
			</section>
			
			<section>
				<label for="body" class="text-xs text-gray-400 mb-2 block">Edit Body</label>
				<%= field.text_area :body, :id => 'body', :rows => '10', :class => "p-2 border-2 focus:border-gray-500 focus:outline-none
				border-opacity-50 border-solid border-gray-300 font-sans text-xl max-w-full w-full" %>
			</section>
			
			<%
				c_date_time = @note.created_at.to_s.split(' ')
				c_date = c_date_time.first
				c_time = c_date_time.second
				
				u_date_time = @note.updated_at.to_s.split(' ')
				u_date = u_date_time.first
				u_time = u_date_time.second
			%>
			
		<section>
			<span class="block font-mono text-xs text-gray-500 text-opacity-50">Created: <%= c_date %>
				at <%= c_time %> </span>
			<span class="font-mono text-xs text-gray-500 text-opacity-50">Last Update: <%= u_date %>
				at <%= u_time %> </span>
		</section>
		
		<div class="right-2 top-2 flex gap-x-2 mt-4">
			<%= field.submit :class => "bg-blue-500 hover:bg-blue-dark text-xs text-white font-bold py-1 px-3 rounded cursor-pointer" %>
			<%= link_to "Delete", note_path(@note), method: :delete, data: { confirm: 'Are you sure? ' },
			            :class => "bg-red-500 hover:bg-red-dark text-xs text-white font-bold py-1 px-3 rounded" %>
		</div>
		<% end %>
	</article>
</main>
