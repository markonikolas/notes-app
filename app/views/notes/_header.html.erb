<header class="p-6 bg-gray-400 text-white">
	<h1 class="font-sans font-bold text-3xl"><%= header_title %></h1>
</header>

<section class="px-6 py-8 flex gap-x-4">
	<% unless params[:controller] == 'notes' && params[:action] == 'index' %>
		<%= render 'button', value: 'Back', type: 'neutral', path: notes_path %>
	<% end %>
	<% unless params[:action] == 'new' %>
		<%= render 'button', value: "New Note", path: new_note_path(@note), type: 'success' %>
	<% end %>
</section>

